  "item": [

    {
      "name": "AUTH",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@test.com\",\n  \"password\": \"Password123!\",\n  \"fullName\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{auth_service}}/auth/register",
              "host": ["{{auth_service}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var data = pm.response.json();",
                  "pm.environment.set('access_token', data.accessToken);",
                  "pm.environment.set('refresh_token', data.refreshToken);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@test.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{auth_service}}/auth/login",
              "host": ["{{auth_service}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Me (Auth)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{auth_service}}/auth/me",
              "host": ["{{auth_service}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },

